@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <span class="me-3">Hello, @User.Identity?.Name!</span>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
        <button type="submit" class="btn btn-outline-success btn-sm">Logout</button>
    </form>
}
else
{
    <a class="btn btn-success btn-sm" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

