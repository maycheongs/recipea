<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecipeLib</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="border-bottom bg-white p-3 d-flex justify-content-between align-items-center">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a class="text-success fs-4 text-decoration-none fw-bold" asp-page="/Recipes/Index">RecipeLib</a>
        }
        else
        {
            <a class="text-success fs-4 text-decoration-none fw-bold" asp-page="/Index">RecipeLib</a>
        }
        <div>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <span class="me-3">Hello, @User.Identity.Name!</span>
                <a class="btn btn-outline-success btn-sm" asp-page="/Auth/Logout">Logout</a>
            }
            else
            {
                <a class="btn btn-success btn-sm" asp-page="/Auth/Login">Login</a>
            }
        </div>
    </header>
    
  <!-- Hero section directly under header -->
    @RenderSection("Hero", required: false)

    <div class="container">
        @RenderBody()
    </div>
    
    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
